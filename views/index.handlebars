<header class="row">
  <div class="col-4"></div>
  <div class="col-4 text-center">
    <h1>EAT-DA-BURGER!</h1>
    <img src="assets/img/burger.png" alt="Da Burger" class="w-50">
  </div>
</header>
<div class="container">
  <div class="row">
    <div class="col">
      <h2>Burgers on da Table</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers in da belly</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col text-center">
      <h2>Burgers on da grill</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burge">Burger Name:</label>
          <input type="text" id="burge" name="name">
        </div>

        <button type="submit">MAKE DA BURGER</button>
      </form>
    </div>

  </div>
</div>